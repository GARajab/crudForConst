<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <%- include('../partials/header.ejs') %>

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="//maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/toastify-js/1.11.2/toastify.min.css"
    />

    <style>
      body {
        background-color: #f8f9fa;
        font-family: "Arial", sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Ensure the body takes full height */
      }
      .breadcrumb {
        background-color: transparent;
        margin-bottom: 20px;
      }
      .profile-card {
        background: linear-gradient(135deg, #6a82fb 0%, #fc5c7d 100%);
        color: white;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      }
      .user-info {
        background: white;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      }
      .scheme-btn {
        padding: 10px 15px;
        margin: 5px;
        border-radius: 5px;
        transition: background-color 0.3s;
      }
      .scheme-btn:hover {
        background-color: #0056b3;
      }
      #spinner,
      #spinnerNew,
      #SpinnerAddingUsers {
        display: none; /* Hidden by default */
      }
      footer {
        background-color: #343a40;
        color: white;
        text-align: center;
        padding: 10px 0;
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
      }
    </style>
  </head>
  <body onload="pushNotify()">
    <%- include('../partials/navbarAllSchemes.ejs') %>

    <!-- Header Section -->
    <header class="py-3">
      <div class="container">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li
              class="breadcrumb-item active"
              aria-current="page"
              style="
                margin: auto;
                color: black;
                font-size: 30px;
                max-width: 1000px;
              "
            ></li>
          </ol>
        </nav>
      </div>
    </header>

    <!-- User Info and Actions -->
    <script>
      function showSpinner() {
        document.getElementById("spinner").style.display = "inline-block"
      }

      function redirect() {
        window.location.href = "/schemes/allSchemes"
      }

      function showSpinnerNew() {
        document.getElementById("spinnerNew").style.display = "inline-block"
      }

      function redirectNewScheme() {
        window.location.href = "/schemes/new"
      }

      function showSpinnerAddUser() {
        document.getElementById("SpinnerAddingUsers").style.display =
          "inline-block"
      }

      function redirectAddUsers() {
        window.location.href = "/auth/sign-up"
      }
    </script>

    <!-- Toast Notification Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.1/chart.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastify-js/1.11.2/toastify.js"></script>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
